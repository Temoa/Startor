<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    android:background="@color/colorChoiceBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_2"/>

    <TextView
        android:id="@+id/mian_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        tools:text="《这波怎么说》#英雄联盟五周年#第四集：55开谈IM"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/main_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_item_tv_16dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorItemSmallText"
            tools:text="13.6万"/>

        <TextView
            android:id="@+id/main_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_item_like_16dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorItemSmallText"
            tools:text="300"/>
    </LinearLayout>
</LinearLayout>