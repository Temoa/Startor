<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:textColor="@color/colorItemText"
        tools:text="长歌躺赢班12: Mate歌的无敌Q闪"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_video_info_tv_16dp"
            android:gravity="center"
            android:textColor="@color/colorItemSmallText"
            tools:text="115095"/>

        <TextView
            android:id="@+id/video_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_video_info_date_16dp"
            android:gravity="center"
            android:textColor="@color/colorItemSmallText"
            tools:text="2016-08-31"/>
    </LinearLayout>

    <TextView
        android:id="@+id/video_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorItemSmallText"
        tools:text="由是大腿出品的《起小点TOP10》每周三，周日更新。新浪微博@起小点 @长歌是大腿 获取更多精彩内容。"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/video_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_item_share_24dp"/>

        <ImageButton
            android:id="@+id/video_coin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_item_coin_24dp"/>

        <ImageButton
            android:id="@+id/video_download"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_item_download_24dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorItemSmallText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/video_about"
        android:textColor="@color/colorItemText"/>

</LinearLayout>